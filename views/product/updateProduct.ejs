<% layout('layout/boilerplate') -%>
<div class="container">
  <div class="text-center mt-5">
    <h1>Edit University Details</h1>
  </div>

  <div class="row">
    <div class="col-lg-7 mx-auto">
      <div class="card mt-2 mx-auto p-4 bg-light">
        <div class="card-body bg-light">
          <div class="container">
            <form
              action="/p1/product/<%= product._id %>?_method=PUT"
              id="contact-form"
              role="form"
              method="POST"
            >
              <div class="controls">
                <div class="row">

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="form_name">University name </label>
                      <input
                        id="form_name"
                        type="text"
                        class="form-control"
                        placeholder="Please enter university name *"
                        required="required"
                        name="universityName"
                        value="<%= product.universityName %>"
                      />
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="form_lastname">Location</label>
                      <input
                        id="form_lastname"
                        type="text"
                        name="location"
                        class="form-control"
                        placeholder="Please enter Location"
                        required="required"
                        value="<%= product.location  %>"
                      />
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="form_email">Number Of Students</label>
                      <input
                        id="form_email"
                        type="number"
                        name="numberOfStudents"
                        class="form-control"
                        placeholder="Please enter Number Of Students"
                        required="required"
                        value="<%= product.numberOfStudents  %>"
                      />
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="form_need">Number Of Courses</label>
                      <input
                        id="form_need"
                        type="number"
                        class="form-control"
                        placeholder="Enter Number Of Courses"
                        name="numberOfCourses"
                        required="required"
                        value="<%= product.numberOfCourses  %>"
                      />
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="form_email">Established Year</label>
                      <input
                        id="form_email"
                        type="number"
                        name="establishedYear"
                        class="form-control"
                        placeholder="Please enter Established Year"
                        required="required"
                        value="<%= product.establishedYear  %>"
                      />
                    </div>
                  </div>

                  <!-- <div class="col-md-6">
                    <div class="form-group">
                      <label for="form_need">Number Of Courses</label>
                      <input
                        id="form_need"
                        type="number"
                        class="form-control"
                        placeholder="Enter number Of Courses"
                        name="numberOfCourses"
                        required="required"
                        value="<%= product.numberOfCourses  %>"
                      />
                    </div>
                  </div> -->
                </div>

                <div class="row">

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="form_email">Contact Email</label>
                      <input
                        id="form_email"
                        type="email"
                        name="contactEmail"
                        class="form-control"
                        placeholder="Please enter Email"
                        required="required"
                        value="<%= product.contactEmail  %>"
                      />
                    </div>
                  </div>

                  <!-- <div class="col-md-6">
                    <div class="form-group">
                      <label for="form_need">Number Of Courses</label>
                      <input
                        id="form_need"
                        type="number"
                        class="form-control"
                        placeholder="Enter Number Of Courses"
                        name="numberOfCourses"
                        required="required"
                        value="<%= product.numberOfCourses  %>"
                      />
                    </div>
                  </div> -->
                </div>
               

                <button class="ed" type="submit">Edit University</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- /.8 -->
    </div>
    <!-- /.row-->
  </div>
</div>
